<%# Content Heading %>
<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

<%- messages() %>

<%# Login Form %>
<div class="login-form-container">
<form action="/login" method="POST"  class="login">
    <fieldset>
        <div class="form-group">
        <label class="above" for="email" for="email">Email:</label>
        <input type="email" id="email" name="account_email" >        
        </div>

        <div class="form-group">
        <label class="above" type="password" for="password" >Password:</label>
        <input type="password" id="password" name="account_password" >
        </div>
        <button type="submit">Login</button>
        <h2>No account? <a href="/account/registration.ejs" >Sign-up</a></h2>
    </fieldset>
    
</form>
</div>